#!/bin/bash
if (( $EUID != 0 )); then
    echo "Please run as root"
    exit
else
  /usr/bin/cmk-agent-ctl register \
  --hostname <%= @host_name %> \
  --server <%= @cmkserver %>:<%= @cmkregister %> \
  --site <%= @cmksite %> \
  --trust-cert \
  --user automation \
  --password '<%= @apitoken %>'
fi
